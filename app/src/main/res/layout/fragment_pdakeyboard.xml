<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/normal_ed0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="120dp"
        android:hint="粤"
        android:paddingTop="12dp" />

    <EditText
        android:id="@+id/normal_ed1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/normal_ed0"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/normal_ed0"
        android:hint="车牌号"
        android:paddingLeft="20dp" />

    <TextView

        android:id="@+id/bt_reset"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/normal_ed1"
        android:layout_marginTop="30dp"
        android:background="@color/click_grey"
        android:gravity="center_horizontal"
        android:onClick="reSet"
        android:padding="10dp"
        android:text="重置" />

    <TextView
        android:id="@+id/bt_enable"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt_reset"
        android:layout_marginTop="30dp"
        android:background="@color/click_grey"
        android:gravity="center_horizontal"
        android:onClick="noneEnable"
        android:padding="10dp"
        android:text="禁用" />

    <TextView
        android:id="@+id/bt_show"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt_enable"
        android:layout_marginTop="30dp"
        android:background="@color/click_grey"
        android:gravity="center_horizontal"
        android:onClick="showHide"
        android:padding="10dp"
        android:text="隐藏/显示" />


    <include
        android:id="@+id/view_kbview"
        layout="@layout/include_pda_keyboard" />

</RelativeLayout>

