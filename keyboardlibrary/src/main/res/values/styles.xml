<resources>


    <!--KeyboardView 自定义键盘样式-->
    <style name="KeyboardView_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@color/keyboard_bg</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:keyBackground">@drawable/function_white_bg</item>
        <item name="android:keyPreviewLayout">@layout/pub_item_keyboard</item>
        <item name="android:keyTextColor">@color/text_black</item>
        <item name="android:keyTextSize">20dp</item>
        <item name="android:labelTextSize">18dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
    </style>

</resources>
